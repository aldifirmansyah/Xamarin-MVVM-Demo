<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Contacts"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewModelDemo.ContactsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddContact"/>
    </ContentPage.ToolbarItems>
    <ListView x:Name="contactsListView"
              SelectedItem="{Binding SelectedContact, Mode=TwoWay}"
              ItemsSource="{Binding Contacts}"
              ItemSelected="OnContactSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding FullName}" TextColor="{Binding TextColor}">
                    <TextCell.ContextActions>
                        <MenuItem Text="Delete"
                                  IsDestructive="True"
                                  Clicked="OnDeleteContact"
                                  CommandParameter="{Binding .}"/>
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>